{
    "name": "pantheon-systems/terminus-conversion-tools-plugin",
    "description": "Conversion Tools is a Terminus plugin that contain commands to convert a standard Drupal8 site into a composer managed one.",
    "type": "terminus-plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": { "Pantheon\\TerminusConversionTools\\": "src" }
    },
    "extra": {
        "terminus": {
            "compatible-version": "^3"
        }
    },
    "require": {
        "symfony/yaml": "^5.3",
        "symfony/process": "^5.3",
        "symfony/finder": "^5.3"
    },
    "require-dev": {
        "pantheon-systems/terminus": "^3",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/http-client": "^5.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Pantheon\\TerminusConversionTools\\Tests\\Functional\\": "tests/functional/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR2 -n src tests",
        "cbf": "phpcbf --standard=PSR2 -n src tests",
        "lint": "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
        "tests:unit": "phpunit --testsuit=unit --debug -c ./phpunit.xml",
        "tests:functional": "phpunit --testsuit=functional --debug -c ./phpunit.xml",
        "tests:functional:group:upstream:drops8": "phpunit --testsuit=functional --debug -c ./phpunit.xml --group=upstream_drops8",
        "tests:functional:group:upstream:empty": "phpunit --testsuit=functional --debug -c ./phpunit.xml --group=upstream_empty",
        "tests:functional:group:upstream:drupal-project": "phpunit --testsuit=functional --debug -c ./phpunit.xml --group=upstream_drupal_project",
        "tests:all": [
            "@tests:unit",
            "@tests:functional"
        ]
    }
}
