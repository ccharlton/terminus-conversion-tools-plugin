{
    "name": "pantheon-systems/terminus-conversion-tools-plugin",
    "description": "Conversion Tools is a Terminus plugin that contain commands to convert a standard Drupal8 site into a composer managed one.",
    "type": "terminus-plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": { "Pantheon\\TerminusConversionTools\\": "src" }
    },
    "extra": {
        "terminus": {
            "compatible-version": "^3"
        }
    },
    "require": {
        "symfony/yaml": "^5.3",
        "symfony/process": "^5.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR2 -n src tests",
        "cbf": "phpcbf --standard=PSR2 -n src tests",
        "lint": "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
        "tests:unit": "phpunit --testsuit=unit",
        "tests:functional": "phpunit --testsuit=functional",
        "tests:all": [
            "@tests:unit",
            "@tests:functional"
        ]
    }
}
